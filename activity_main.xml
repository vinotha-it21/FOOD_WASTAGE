       android:textColor="@color/white"
       android:textSize="20sp"
       android:textStyle="bold" />

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="wrap_content"
       android:layout_height="307dp"
       android:layout_alignLeft="@id/STARTED"
